---
import content from '@data/content.json'
const items: Array<{ name: string; role: string; quote: string }> = content.testimonials
---
<section class="container py-16">
  <div class="flex items-end justify-between">
    <div>
      <h2 class="font-display text-3xl sm:text-4xl">What Clients Say</h2>
      <p class="mt-2 text-muted">Real feedback from happy homeowners</p>
    </div>
  </div>
  <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
    {items.map((t: { name: string; role: string; quote: string }) => (
      <div class="card p-6">
        <div class="flex items-center gap-3">
          <div class="h-10 w-10 rounded-full bg-primary"></div>
          <div>
            <div class="font-semibold">{t.name}</div>
            <div class="text-xs text-muted">{t.role}</div>
          </div>
        </div>
        <p class="mt-4 text-sm">{t.quote}</p>
      </div>
    ))}
  </div>
</section>
