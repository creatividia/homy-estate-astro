---
const { item } = Astro.props as { item: { slug?: string; title: string; price: string; location: string; beds: number; baths: number; area: number; image: string } }
---
<article class="card overflow-hidden">
  <div class="aspect-w-16 aspect-h-12 bg-bg">
    <img src={item.image} alt={item.title} class="h-full w-full object-cover" />
  </div>
  <div class="p-5">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-semibold">{item.title}</h3>
      <span class="font-semibold text-primary">{item.price}</span>
    </div>
    <p class="mt-1 text-sm text-muted">{item.location}</p>
    <div class="mt-4 grid grid-cols-3 gap-3 text-sm">
      <div class="rounded-lg bg-bg border border-border px-3 py-2">{item.beds} Beds</div>
      <div class="rounded-lg bg-bg border border-border px-3 py-2">{item.baths} Baths</div>
      <div class="rounded-lg bg-bg border border-border px-3 py-2">{item.area} mÂ²</div>
    </div>
    <div class="mt-5 flex items-center gap-3">
      <a href={item.slug ? `/properties/${item.slug}` : '#'} class="btn-ghost">Details</a>
      <a href="/contact" class="btn-primary">Contact</a>
    </div>
  </div>
</article>
