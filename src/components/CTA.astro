---
import content from '@data/content.json'
const data: { title: string; subtitle: string } = content.cta
---
<section class="bg-surface border-y border-border relative overflow-hidden">
  <img src="/images/cta-abstract-1.svg" alt="" class="hidden lg:block absolute right-16 top-8 h-32 opacity-30" />
  <img src="/images/cta-abstract-2.svg" alt="" class="hidden lg:block absolute left-10 bottom-6 h-28 opacity-20" />
  <div class="container py-20 flex flex-col lg:flex-row items-center gap-10 lg:gap-20">
    <div class="flex-1">
      <h2 class="font-display text-3xl sm:text-4xl">{data.title}</h2>
      <p class="mt-2 text-muted">{data.subtitle}</p>
    </div>
    <div class="flex items-center gap-3">
      <a href="#" class="btn-primary">Get Started</a>
      <a href="#" class="btn-ghost">Contact Sales</a>
    </div>
  </div>
</section>
