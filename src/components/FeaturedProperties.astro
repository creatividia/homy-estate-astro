---
import PropertyCard from './PropertyCard.astro'
import content from '@data/content.json'
const items: Array<{ title: string; location: string; price: string; beds: number; baths: number; area: number; image: string }> = content.properties
---
<section class="container py-16">
  <div class="flex items-end justify-between">
    <div>
      <h2 class="font-display text-3xl sm:text-4xl">Featured Properties</h2>
      <p class="mt-2 text-muted">Handpicked homes in popular locations</p>
    </div>
    <a href="#" class="btn-ghost">View All</a>
  </div>
  <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {items.map((item) => (
      <PropertyCard item={item} />
    ))}
  </div>
</section>
