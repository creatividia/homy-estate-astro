---
const { agent } = Astro.props as { agent: { name: string; role: string; rating: number; phone: string; email: string; avatar: string } }
---
<article class="card p-6">
  <div class="flex items-center gap-4">
    <img src={agent.avatar} alt={agent.name} class="h-14 w-14 rounded-full object-cover" />
    <div>
      <div class="font-semibold">{agent.name}</div>
      <div class="text-xs text-muted">{agent.role}</div>
    </div>
  </div>
  <div class="mt-4 grid grid-cols-2 gap-3 text-sm">
    <div class="rounded-lg bg-bg border border-border px-3 py-2">‚≠ê {agent.rating}</div>
    <div class="rounded-lg bg-bg border border-border px-3 py-2">{agent.phone}</div>
    <div class="col-span-2 rounded-lg bg-bg border border-border px-3 py-2">{agent.email}</div>
  </div>
  <div class="mt-5 flex items-center gap-3">
    <a href="#" class="btn-ghost">View Profile</a>
    <a href="#" class="btn-primary">Contact</a>
  </div>
</article>
