---
import content from '@data/content.json'
const links: { label: string; href: string }[] = content.nav.links
---
<header class="border-b border-border bg-surface">
  <div class="container flex items-center justify-between py-4">
    <a href="/" class="flex items-center gap-3">
      <div class="h-9 w-9 rounded-lg bg-primary"></div>
      <span class="font-display text-xl">HomyEstate</span>
    </a>
    <nav class="hidden md:flex items-center gap-10">
      {links.map((l: { label: string; href: string }) => (
        <a href={l.href} class="text-sm text-muted hover:text-primary">{l.label}</a>
      ))}
    </nav>
    <div class="hidden md:flex items-center gap-3">
      <button id="theme-toggle" class="btn-ghost" aria-label="Toggle theme">
        <span data-light>ğŸŒ™</span>
        <span data-dark class="hidden">â˜€ï¸</span>
      </button>
      <a href="#" class="btn-ghost">Sign In</a>
      <a href="#" class="btn-primary">Get Started</a>
    </div>
    <button id="mobile-menu-button" aria-controls="mobile-menu-panel" aria-expanded="false" class="md:hidden btn-ghost text-text" aria-label="Menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M3 6H21M3 12H21M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
    </button>
  </div>
  <div id="mobile-menu-panel" class="md:hidden hidden border-t border-border bg-surface">
    <div class="container py-4 space-y-4">
      <nav class="grid grid-cols-1 gap-2">
        {links.map((l: { label: string; href: string }) => (
          <a href={l.href} class="rounded-lg px-3 py-2 text-sm text-muted hover:text-primary">{l.label}</a>
        ))}
      </nav>
      <div class="flex items-center gap-3">
        <a href="#" class="btn-ghost">Sign In</a>
        <a href="#" class="btn-primary">Get Started</a>
      </div>
    </div>
  </div>
</header>
<script>
  (() => {
    const btn = document.getElementById('mobile-menu-button');
    const panel = document.getElementById('mobile-menu-panel');
    if (!btn || !panel) return;
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', expanded ? 'false' : 'true');
      panel.classList.toggle('hidden', expanded);
    });
  })();
</script>
